<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;200;300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">
</head>
<style>
    body {
        background-color: rgb(1, 9, 34);
        font-family: "raleway"
    }

    #left {
        width: 50vw;
        /* border: 2px solid red; */
    }

    #right {
        width: 50vw;
        /* border: 2px solid yellow; */
    }

    #main {
        display: flex;
    }

    img {
        height: 100vh;
        width: 50vw;
    }

    #head {
        font-weight: 600;
        font-size: 25px;
        color: white;
        /* border: 2px solid red; */
        margin-left: 20vw;
        margin-top: 5vh;
    }

    #form {
        /* border: 2px solid red; */
        margin-top: 15vh;
    }

    label {
        color: white;
        margin-left: 10vw;
        /* margin-bottom: 5vh; */
    }

    input {
        margin-left: 10vw;
        width: 25vw;
        height: 5vh;
        border-radius: 30px;
        margin-top: 3vh;
        margin-bottom: 3vh;
    }

    .btn {
        margin-left: 10vw;
        height: 5vh;
        width: 25vw;
        border-radius: 30px;
        border: 1px solid white;
        margin-top: 3vh;
        color: white;
        background-color: rgb(1, 9, 34);
        font-size: 16px;
    }

    .btn:hover {
        background-color: #AAD9D9;
        color: black;
        transition: 0.5s;
    }

    #login {
        margin-left: 10vw;
        height: 5vh;
        width: 25vw;
        border-radius: 30px;
        border: 1px solid white;
        margin-top: 3vh;
        color: white;
        background-color: rgb(1, 9, 34);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    #login:hover {
        background-color: #AAD9D9;
        color: black;
        transition: 0.5s;
    }

    a {
        text-decoration: none;
    }
</style>

<body>
    <div id="main">
        <div id="left">
            <div id="head">Login</div>
            <div id="form">
                <form action='/login' method="POST">
                    <label for="mail">Email</label>
                    <br>
                    <input type="email" name="mail" id="mail" required placeholder="abc@gmail.com">
                    <br>
                    <label for="pass-1">Enter Password</label>
                    <br>
                    <input type="password" name="pass_1" id="pass_1" required placeholder="enter password">
                    <br>

                    <input type="submit" class="btn" value="Login">
                </form>
                <a href="sign">
                    <div id="login">Sign up</div>
                </a>
            </div>
        </div>
        <div id=" right">
            <img src="images/loginSvg.svg">
        </div>
    </div>
</body>

</html>